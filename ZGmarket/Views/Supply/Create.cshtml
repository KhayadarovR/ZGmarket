@model ZGmarket.Models.ViewModels.SupplyCreateView

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Создать поставку</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewSupply.NomId" class="control-label">Товар</label>
                <select asp-for="NewSupply.NomId" class="form-select" aria-label="Default select example">
                    @foreach (Nom item in Model.Noms)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
                <span asp-validation-for="Noms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stocks" class="control-label">Склады</label>
                <select asp-for="NewSupply.StockId" class="form-select" aria-label="Default select example">
                    @foreach (Stock item in Model.Stocks)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
                <span asp-validation-for="Stocks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emps" class="control-label">Кто принял</label>
                <select asp-for="NewSupply.EmpId" class="form-select" aria-label="Default select example">
                    @foreach (Emp item in Model.Emps)
                    {
                        <option value="@item.Id">@item.Position @item.Name @item.LastName</option>
                    }
                </select>
                <span asp-validation-for="Emps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewSupply.Quantity" class="control-label">Количество шт.</label>
                <input type="number" asp-for="NewSupply.Quantity" class="form-control" />
                <span asp-validation-for="NewSupply.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewSupply.Delivery" class="control-label">Дата поставки</label>
                <input type="date" asp-for="NewSupply.Delivery" class="form-control" />
                <span asp-validation-for="NewSupply.Delivery" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
