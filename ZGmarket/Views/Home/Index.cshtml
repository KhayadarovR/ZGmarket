@using ZGmarket.Data;
@using ZGmarket.Models.ViewModels;

@model List<HomeView>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
    <div class="">
        <div class="row">
            <div class="col-3">
                <div class="btn-group-vertical">
                    <a class="pb-3 btn btn-primary" href="/Home/Index">Все товары</a>
                    @foreach (var depart in Department.DepartList)
                    {
                        <a class="pb-3 btn btn-secondary" href="/Home/Depart/?depart=@depart">@depart</a>
                    }
                </div>
            </div>
            <div class="col-9">
                @foreach (var item in Model)
                {
                <div class="card card-body">
                    <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                        <div class="mr-2 mb-3 mb-lg-0">

                            <img src="https://desudeport.ru/imgtmp/orign_100_w/data/example.jpg" width="150" height="150" alt="">

                        </div>

                        <div class="media-body">
                            <h6 class="media-title font-weight-semibold">
                                <a href="#" data-abc="true">@item.Nom.Title</a>
                            </h6>

                            <p class="mb-3">Отдел: @item.NomStock.Depart</p>
                            
                            <p class="mb-3">Срок годности: @item.Nom.ShelfLife д.</p>

@*                            <ul class="list-inline list-inline-dotted mb-0">
                                <li class="list-inline-item">All items from <a href="#" data-abc="true">Mobile point</a></li>
                                <li class="list-inline-item">Add to <a href="#" data-abc="true">wishlist</a></li>
                            </ul>*@
                        </div>

                        <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                            <h3 class="mb-0 font-weight-semibold">Цена: @item.Nom.Price руб.</h3>

                            <div>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>

                            <div class="text-muted">Количество: @item.NomStock.Quantity шт.</div>

                           
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>