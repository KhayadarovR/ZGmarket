@using ZGmarket.Data;
@model ZGmarket.Models.NomStock

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Выставить в отдел\сайт</h1>

<h4>Со склада id(@Model.StockId)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Depart" class="control-label"></label>
                <select asp-for="Depart" class="form-select" aria-label="Default select example">
                    @foreach (string item in Department.DepartList)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                <span asp-validation-for="Depart" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Выставить в отдел\сайт" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
