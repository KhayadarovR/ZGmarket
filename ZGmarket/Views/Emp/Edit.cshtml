@using ZGmarket.Data;
@model ZGmarket.Models.Emp

@{
    ViewData["Title"] = "Редактировать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать данные</h1>

<h4>Сотрудник id: (@Model.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input type="date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            @if (Model.Position != Positions.root)
            {
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <select asp-for="Position" class="form-select" aria-label="Default select example">
                        <option selected>@Positions.Trainee</option>
                        <option value="@Positions.Salesman">@Positions.Salesman</option>
                        <option value="@Positions.Security">@Positions.Security</option>
                        <option value="@Positions.Director">@Positions.Director</option>
                        <option value="@Positions.Admin">@Positions.Admin</option>
                        <option value="@Positions.root">@Positions.root</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Назад в список</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
